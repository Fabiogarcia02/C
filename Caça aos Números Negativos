#include <stdio.h>
#include <stdlib.h>

void preencheValores(int vetor[10]) {
    int i;
    printf("ğŸ¯ Bem-vindo ao jogo: CaÃ§a aos NÃºmeros Negativos!\n");
    printf("Digite 10 nÃºmeros e veja quantos negativos vocÃª consegue capturar!\n\n");

    for(i = 0; i < 10; i++) {
        printf("ğŸ§  Digite o nÃºmero %d: ", i + 1);
        scanf("%d", &vetor[i]);

        if(vetor[i] < 0) {
            printf("âœ… VocÃª encontrou um nÃºmero negativo!\n");
        } else if(vetor[i] > 0) {
            printf("â¡ï¸ Esse Ã© positivo, continue tentando...\n");
        } else {
            printf("ğŸŸ¡ NÃºmero neutro! NÃ£o ajuda nem atrapalha.\n");
        }
    }
}

void copiaNegativos(int original[10], int negativos[10]) {
    int i, j = 0;

    for(i = 0; i < 10; i++) {
        if(original[i] < 0) {
            negativos[j] = original[i];
            j++;
        }
    }

    while(j < 10) {
        negativos[j] = 0;
        j++;
    }
}

int main() {
    int numeros[10];
    int negativos[10];
    int i, total = 0;

    preencheValores(numeros);
    copiaNegativos(numeros, negativos);

    printf("\nğŸ‰ Fim da rodada!\n");
    printf("ğŸ” NÃºmeros negativos encontrados:\n");

    for(i = 0; i < 10; i++) {
        if(negativos[i] != 0) {
            printf("ğŸ”´ %d\n", negativos[i]);
            total++;
        }
    }

    if(total == 0) {
        printf("\nğŸ˜¢ Nenhum negativo encontrado. Tente de novo!\n");
    } else {
        printf("\nğŸ† VocÃª capturou %d nÃºmero(s) negativo(s)! ParabÃ©ns!\n", total);
    }

    printf("\nObrigado por jogar!\n");
    return 0;
}
