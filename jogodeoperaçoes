#include <stdio.h>

// FunÃ§Ãµes para operaÃ§Ãµes matemÃ¡ticas
int multi(int a, int b) { return a * b; }
int adi(int a, int b) { return a + b; }
int sub(int a, int b) { return a - b; }
int divi(int a, int b) { 
    if (b == 0) {
        printf("\nğŸš¨ Erro: divisÃ£o por zero nÃ£o Ã© permitida!\n");
        return 0;
    }
    return a / b; 
}

void carregando() {
    printf("\nâ³ Calculando");
    for (int i = 0; i < 3; i++) {
        printf(".");
        fflush(stdout);  // Atualiza a saÃ­da no console
        for (int j = 0; j < 100000000; j++);  // Pequeno delay
    }
    printf("\n");
}

int main() {
    int caso, x, y, resultado;
    char continuar;

    do {
        // Exibe o menu de opÃ§Ãµes
        printf("\nğŸ”¢ ===== CALCULADORA INTERATIVA ===== ğŸ”¢\n");
        printf("ğŸ“Œ Escolha uma operaÃ§Ã£o:\n");
        printf(" 1ï¸âƒ£ - MultiplicaÃ§Ã£o (x)\n");
        printf(" 2ï¸âƒ£ - AdiÃ§Ã£o (+)\n");
        printf(" 3ï¸âƒ£ - SubtraÃ§Ã£o (-)\n");
        printf(" 4ï¸âƒ£ - DivisÃ£o (/)\n");
        printf("======================================\n");
        printf("â¡ï¸ Digite sua escolha: ");
        scanf("%d", &caso);

        // Se a opÃ§Ã£o for vÃ¡lida, pede os nÃºmeros
        if (caso >= 1 && caso <= 4) {
            printf("\nâœï¸ Insira dois nÃºmeros: ");
            scanf("%d %d", &x, &y);
            carregando(); // Simula um pequeno carregamento
        }

        // Escolhe a operaÃ§Ã£o com base na opÃ§Ã£o
        switch (caso) {
            case 1:
                resultado = multi(x, y);
                printf("\nğŸŸ¢ O resultado da multiplicaÃ§Ã£o Ã©: %d\n", resultado);
                break;
            case 2:
                resultado = adi(x, y);
                printf("\nğŸŸ¢ O resultado da adiÃ§Ã£o Ã©: %d\n", resultado);
                break;
            case 3:
                resultado = sub(x, y);
                printf("\nğŸŸ¢ O resultado da subtraÃ§Ã£o Ã©: %d\n", resultado);
                break;
            case 4:
                resultado = divi(x, y);
                if (y != 0) {
                    printf("\nğŸŸ¢ O resultado da divisÃ£o Ã©: %d\n", resultado);
                }
                break;
            default:
                printf("\nâŒ OpÃ§Ã£o invÃ¡lida! Escolha um nÃºmero entre 1 e 4.\n");
        }

        // Perguntar se deseja continuar
        printf("\nğŸ”„ Deseja realizar outra operaÃ§Ã£o? (s/n): ");
        scanf(" %c", &continuar);
        
    } while (continuar == 's' || continuar == 'S');

    printf("\nğŸ‰ Obrigado por usar a Calculadora Interativa! AtÃ© mais! ğŸ‘‹\n");
    return 0;
}
