#include <stdio.h>
#include <stdlib.h>

// FunÃ§Ã£o recursiva para calcular Fibonacci
int fibonacci(int n) {
    if (n == 0) return 0;
    if (n == 1) return 1;
    return fibonacci(n - 1) + fibonacci(n - 2);
}

int main() {
    int n;
    
    printf("ğŸ® Bem-vindo ao Jogo do Fibonacci! ğŸ®\n");
    printf("ğŸ“¢ Regras: VocÃª digita um nÃºmero e eu te mostro o valor de Fibonacci!\n\n");
    
    while (1) { // Loop para repetir o jogo atÃ© o usuÃ¡rio decidir sair
        printf("ğŸ‘‰ Digite um nÃºmero (ou -1 para sair): ");
        scanf("%d", &n);
        
        if (n == -1) {
            printf("ğŸšª Saindo do jogo... AtÃ© a prÃ³xima! ğŸ‘‹\n");
            break;
        }

        if (n < 0) {
            printf("âš ï¸ NÃºmero invÃ¡lido! Digite um nÃºmero positivo.\n");
            continue;
        }

        printf("ğŸ”¢ O Fibonacci de %d Ã©: ğŸ’¡ %d ğŸ’¡\n\n", n, fibonacci(n));
    }

    return 0;
}
