#include <stdio.h>
#include <stdlib.h>

void preencherVetorA(int A[10]) {
    printf("ğŸ® Bem-vindo ao Desafio da DiferenÃ§a!\n");
    printf("ğŸ”¢ Primeiro, preencha o vetor A com 10 nÃºmeros.\n\n");

    for (int i = 0; i < 10; i++) {
        printf("ğŸ‘‰ Digite o valor para A[%d]: ", i);
        scanf("%d", &A[i]);
    }
}

void preencherVetorB(int A[10], int B[10]) {
    printf("\nğŸ§  Agora preencha o vetor B.\n");
    printf("âš ï¸ AtenÃ§Ã£o: O valor de B[%d] nÃ£o pode ser igual a A[%d]!\n\n", 0, 0);

    for (int i = 0; i < 10; i++) {
        int valido = 0;

        while (!valido) {
            printf("ğŸ‘‰ Digite o valor para B[%d]: ", i);
            scanf("%d", &B[i]);

            if (B[i] == A[i]) {
                printf("âŒ Valor invÃ¡lido! B[%d] nÃ£o pode ser igual a A[%d] (%d). Tente outro nÃºmero.\n", i, i, A[i]);
            } else {
                valido = 1;
            }
        }
    }
}

void mostrarDiferencas(int A[10], int B[10]) {
    printf("\nğŸ“Š DiferenÃ§a entre os elementos de A e B:\n");

    for (int i = 0; i < 10; i++) {
        int diff = A[i] - B[i];
        printf("ğŸ”¹ A[%d] (%d) - B[%d] (%d) = %d\n", i, A[i], i, B[i], diff);
    }

    printf("\nğŸ Fim do desafio. Obrigado por jogar!\n");
}

int main() {
    int A[10], B[10];

    preencherVetorA(A);
    preencherVetorB(A, B);
    mostrarDiferencas(A, B);

    return 0;
}
