#include <stdio.h>

int main() {
    int arr[5];
    int i, menor, posMenor, temp;

    printf("ğŸ” Desafio: Encontre e mova o menor nÃºmero!\n");
    printf("ğŸ‘‰ Digite 5 nÃºmeros inteiros:\n");

    for(i = 0; i < 5; i++) {
        printf("NÃºmero %d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    // Procurar o menor valor
    menor = arr[0];
    posMenor = 0;

    for(i = 1; i < 5; i++) {
        if(arr[i] < menor) {
            menor = arr[i];
            posMenor = i;
        }
    }

    // Trocar com a primeira posiÃ§Ã£o
    temp = arr[0];
    arr[0] = arr[posMenor];
    arr[posMenor] = temp;

    // Mostrar vetor final
    printf("\nğŸ“Š Vetor apÃ³s a troca do menor com o primeiro elemento:\n");
    for(i = 0; i < 5; i++) {
        printf("%d ", arr[i]);
    }

    printf("\nğŸ† O menor nÃºmero era %d e estava na posiÃ§Ã£o %d.\n", menor, posMenor);
    return 0;
}
