#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int mdc(int a, int b) {
    int maiorDivisorComum = 1;
    for (int i = 1; i <= a && i <= b; i++) {
        if (a % i == 0 && b % i == 0) {
            maiorDivisorComum = i;
        }
    }
    return maiorDivisorComum;  
}


void esperarPorAlgumTempo(int segundos) {
    printf("âŒ› Aguarde... Calculando o MDC...\n");
    for (int i = 0; i < segundos; i++) {
        printf("â³");
        fflush(stdout);

    }
    printf("\n");
}


void mostrarMensagemComEstilo(char* mensagem) {
    printf("\033[1;33m%s\033[0m", mensagem); 
}

int main() {
    int a, b, resultadoMDC;
    int tentativas = 3;  
    int tentativasRestantes = tentativas;
   
    
    printf("\033[1;32mğŸ® Bem-vindo ao Desafio do MDC! ğŸ®\033[0m\n");
    printf("VocÃª tem %d tentativas para acertar o MDC! ğŸ†\n\n", tentativas);
   
    while (tentativasRestantes > 0) {
        printf("\033[1;36mğŸ¯ Digite dois nÃºmeros para calcular o MDC: ğŸ§®\033[0m ");
        scanf("%d %d", &a, &b);
       
       
        if (a <= 0 || b <= 0) {
            printf("\033[1;31mğŸš« Por favor, insira nÃºmeros positivos! ğŸ’¡\033[0m\n");
            continue;
        }

 
        esperarPorAlgumTempo(3);  
       
        resultadoMDC = mdc(a, b);
       
   
        mostrarMensagemComEstilo("ğŸ” Calculando o MDC...\n");
        printf("\033[1;32mâœ… O MDC de %d e %d Ã©: \033[0m%d\n", a, b, resultadoMDC);
       
        tentativasRestantes--;
       
        if (tentativasRestantes > 0) {
            printf("\nğŸ¯ VocÃª ainda tem %d tentativas restantes! â³\n", tentativasRestantes);
        } else {
            printf("\n\033[1;31mğŸš¨ Game Over! VocÃª usou todas as suas tentativas. ğŸ’”\033[0m\n");
        }
       
        // Perguntar se o jogador quer continuar
        if (tentativasRestantes > 0) {
            char resposta;
            printf("\033[1;34mğŸ”„ Quer tentar novamente? (S/N) ğŸ®\033[0m ");
            getchar();  // Limpar o buffer do enter
            resposta = getchar();
            if (resposta == 'N' || resposta == 'n') {
                break;
            }
        }
    }

    printf("\033[1;33mğŸŒŸ Obrigado por jogar! AtÃ© a prÃ³xima! ğŸŒŸ\033[0m\n");

    return 0;
}
