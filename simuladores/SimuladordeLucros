#include <stdio.h>

int main() {
    float compra, venda;
    int lucroBaixo = 0, lucroMedio = 0, lucroAlto = 0;
    float totalCompra = 0, totalVenda = 0, lucroTotal = 0;
    int contador = 1;

    printf("ğŸ›’ Bem-vindo ao Simulador de Lucros do Comerciante! ğŸ’¸\n");
    printf("ğŸ“¦ Vamos registrar os preÃ§os de compra e venda de suas mercadorias!\n");
    printf("âŒ Digite 0 no preÃ§o de compra para encerrar.\n\n");

    while (1) {
        printf("ğŸ“¦ Produto %d\n", contador);
        printf("ğŸ’° PreÃ§o de *compra*: R$ ");
        scanf("%f", &compra);

        if (compra == 0) {
            printf("ğŸ“‰ Fim da entrada de mercadorias! ğŸ›‘\n\n");
            break;
        }

        printf("ğŸ›ï¸ PreÃ§o de *venda*: R$ ");
        scanf("%f", &venda);

        float lucro = venda - compra;
        float percentualLucro = (lucro / compra) * 100;

        // Classifica o lucro
        if (percentualLucro < 10.0) {
            lucroBaixo++;
            printf("ğŸ“‰ Lucro menor que 10%% (%.2f%%)\n\n", percentualLucro);
        } else if (percentualLucro <= 20.0) {
            lucroMedio++;
            printf("ğŸ“ˆ Lucro entre 10%% e 20%% (%.2f%%)\n\n", percentualLucro);
        } else {
            lucroAlto++;
            printf("ğŸš€ Lucro acima de 20%% (%.2f%%)\n\n", percentualLucro);
        }

        totalCompra += compra;
        totalVenda += venda;
        lucroTotal += lucro;
        contador++;
    }

    // Resultados finais
    printf("ğŸ“Š RESULTADO FINAL DA LOJA ğŸ“Š\n");
    printf("ğŸ§¾ Total de produtos cadastrados: %d\n", contador - 1);
    printf("ğŸ”» Lucro < 10%%: %d produtos\n", lucroBaixo);
    printf("ğŸ”¸ Lucro entre 10%% e 20%%: %d produtos\n", lucroMedio);
    printf("ğŸ”º Lucro > 20%%: %d produtos\n", lucroAlto);

    printf("\nğŸ’° Valor total de compra: R$ %.2f\n", totalCompra);
    printf("ğŸ›ï¸ Valor total de venda: R$ %.2f\n", totalVenda);
    printf("ğŸ’¹ Lucro total: R$ %.2f\n", lucroTotal);
    printf("ğŸ‰ Obrigado por usar o simulador, volte sempre! ğŸªâ¤ï¸\n");

    return 0;
}
